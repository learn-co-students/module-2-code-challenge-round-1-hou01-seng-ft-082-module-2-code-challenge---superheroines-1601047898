<h2>All Superpowers</h2>

<%=button_to "Heroines Page", heroines_path, method: :get%>

<ul>
  <% @powers.each do |power| %>
    <li>
      <%= link_to power.name, power_path(power) %>
      <br>
      Description: <%= power.description %>
      <br>
      Number of Heroines with this power: <%=power.number_of_heroines%>
    </li>
  <% end %>
</ul>
