<%if flash[:errors]%>
<%flash[:errors].each do |error|%>
<li style="color:red"><%=error%></li>
<%end%>
<%end%>


<%=form_for(@hero_pow) do |f|%>
<%=f.label "Hero Selection"%>
<%= f.collection_select :heroine_id, @heroines, :id, :super_name, {include_blank: 'Select a Heroine'}%>
<%=f.label "Power Selection"%>
<%= f.collection_select :power_id, @powers, :id, :name, {include_blank: 'Select a Power'}%>
<%=f.label "Power Strength"%>
<%=f.text_field :strength%>
<%=f.submit%>
<%end%>